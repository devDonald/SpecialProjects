<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:layout_height="450dp"
    android:padding="5dp"
    android:background="@color/black"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:background="@drawable/border_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minna Church"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="295dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/gla" />


            <TextView
                android:layout_marginTop="10dp"
                style="@style/CommonAttr1"
                android:fontFamily="sans-serif"
                android:text="The God-Life Assembly, Blue Roof, Blue Gate, Behind Morris Fertilizer Company Minna, Niger State"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:text="Sundays - 8am"
                style="@style/CommonAttr1"
                />

            <TextView
                android:layout_marginTop="5dp"
                style="@style/CommonAttr1"
                android:text="Thursdays - 5pm"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="16sp"
                style="@style/CommonAttr1"
                android:fontFamily="sans-serif"
                android:text="Contact  Mr. Reuben Azael on 08036954020 for more information"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>