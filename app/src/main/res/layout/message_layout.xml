<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    >

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/messenger_image"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_person"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"

    />
    <LinearLayout
        android:layout_toEndOf="@id/messenger_image"
        android:layout_alignParentTop="true"
        android:id="@+id/message_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receiver_message_layout"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/messenger_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="16"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:text="Donald Ebuga"
            android:paddingRight="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="16"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:text="jkdasfjkgagjr dsakjdfjjfkg dfkf dafl dshdkjd"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/01/2020"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="09:25am"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/sent_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>