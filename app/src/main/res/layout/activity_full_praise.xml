<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FullPraise">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/full_playout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:id="@+id/full_praise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />




        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/full_playout1"
            app:layout_constraintTop_toBottomOf="@id/full_playout1"
            app:layout_constraintEnd_toEndOf="@id/full_playout1"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:id="@+id/full_praise_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            />

        <LinearLayout
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/full_praise_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/praise_footer"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="5dp"
                android:id="@+id/full_praise_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:padding="5dp"
                android:id="@+id/full_praise_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                />
            <TextView
                android:padding="5dp"
                android:id="@+id/full_praise_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>