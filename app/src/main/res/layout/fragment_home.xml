<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:id="@+id/card_service_summary"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_lovenotes"
                >
                <RelativeLayout
                    android:id="@+id/rv_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/sevice_image"
                        android:src="@drawable/service"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_service_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_service_text"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_alignParentBottom="true"
                        android:text="Live Update"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:id="@+id/card_lovenotes"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_service_summary"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:id="@+id/rv_love"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/love_image"
                        android:src="@drawable/lovenote"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_lovenote_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_lovenote_text"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_alignParentBottom="true"
                        android:text="Love Note"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:id="@+id/card_praise_report"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_service_summary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_upcoming_meetings"
                >
                <RelativeLayout
                    android:id="@+id/rv_testimony"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/testiminy_image"
                        android:src="@drawable/testimony"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_praise_report_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_praise_report_text"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true"
                        android:text="Praise Report"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:id="@+id/card_upcoming_meetings"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/card_lovenotes"
                app:layout_constraintStart_toEndOf="@id/card_praise_report"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:id="@+id/rv_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/event_image"
                        android:src="@drawable/up_meetings"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_upcoming_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_upcoming_text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentBottom="true"
                        android:text="Upcoming Meetings"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:id="@+id/card_articles"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_praise_report"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_notices"
                >
                <RelativeLayout
                    android:id="@+id/rv_articles"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/notices_image"
                        android:src="@drawable/notices"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_notices_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_notices_text"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true"
                        android:text="Notices"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="190dp"
                app:cardCornerRadius="3dp"
                android:id="@+id/card_notices"
                app:layout_constraintTop_toBottomOf="@id/card_upcoming_meetings"
                app:layout_constraintStart_toEndOf="@id/card_articles"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:id="@+id/rv_birthdays"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:id="@+id/notice_image"
                        android:src="@drawable/birth"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_birthdays_text"
                        />

                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_birthdays_text"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true"
                        android:text="Birthdays"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>