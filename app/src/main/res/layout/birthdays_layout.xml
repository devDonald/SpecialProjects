<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="3dp"
    android:id="@+id/birth_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/birth_person_image"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birth_person_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/birth_person_image"
            android:layout_marginStart="7dp"
            />
        <TextView
            android:layout_below="@id/birth_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birth_person_date"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toEndOf="@id/birth_person_image"
            android:layout_marginStart="7dp"
            />
        <TextView
            android:padding="5dp"
            android:background="@color/coconut_milk"
            android:layout_marginTop="10dp"
            android:layout_below="@id/birth_person_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birth_person_phone"
            android:text="Call"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_toEndOf="@id/birth_person_image"
            android:layout_marginStart="7dp"
            />
        <TextView
            android:padding="5dp"
            android:background="@color/coconut_milk"
            android:layout_marginTop="10dp"
            android:layout_below="@id/birth_person_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birth_person_text"
            android:text="Text"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_toEndOf="@id/birth_person_phone"
            android:layout_marginStart="15dp"
            />


        <TextView
            android:drawablePadding="5dp"
            android:drawableEnd="@drawable/ic_thumb"
            android:padding="5dp"
            android:background="@color/coconut_milk"
            android:layout_marginTop="10dp"
            android:layout_below="@id/birth_person_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birth_person_like"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="0"
            android:layout_toEndOf="@id/birth_person_text"
            android:layout_marginStart="15dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>