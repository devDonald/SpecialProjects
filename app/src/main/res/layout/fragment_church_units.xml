            style="@style/commonUnits"
            android:text="@string/text_ushering"

            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_ushering"
            app:layout_constraintStart_toStartOf="@id/unit_ushering"
            app:layout_constraintEnd_toEndOf="@id/unit_ushering"
            android:id="@+id/unit_protocol"
            style="@style/commonUnits"
            android:text="@string/text_protocol"

            />

        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_protocol"
            app:layout_constraintEnd_toEndOf="@id/unit_protocol"
            app:layout_constraintStart_toStartOf="@id/unit_protocol"
            android:id="@+id/unit_sanctuary"
            style="@style/commonUnits"
            android:text="@string/text_sanctuary"

            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_sanctuary"
            app:layout_constraintStart_toStartOf="@id/unit_sanctuary"
            app:layout_constraintEnd_toEndOf="@id/unit_sanctuary"
            android:id="@+id/unit_agape"
            style="@style/commonUnits"
            android:text="@string/text_agape"

            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_agape"
