            app:layout_constraintEnd_toEndOf="@id/unit_agape"
            android:id="@+id/unit_beautification"
            style="@style/commonUnits"
            android:text="@string/text_beautification"

            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_beautification"
            app:layout_constraintEnd_toEndOf="@id/unit_beautification"
            app:layout_constraintStart_toStartOf="@id/unit_beautification"
            android:id="@+id/unit_technical"
            style="@style/commonUnits"
            android:text="@string/text_technical"

            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_technical"
            app:layout_constraintStart_toStartOf="@id/unit_technical"
            app:layout_constraintEnd_toEndOf="@id/unit_technical"
            android:id="@+id/unit_treasury"
            style="@style/commonUnits"
            android:text="@string/text_treasury"

            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_treasury"
            app:layout_constraintEnd_toEndOf="@id/unit_treasury"
            app:layout_constraintStart_toStartOf="@id/unit_treasury"
            android:id="@+id/unit_welfare"
            style="@style/commonUnits"
            android:text="@string/text_welfare"

            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_welfare"
            app:layout_constraintStart_toStartOf="@id/unit_welfare"
            app:layout_constraintEnd_toEndOf="@id/unit_welfare"
