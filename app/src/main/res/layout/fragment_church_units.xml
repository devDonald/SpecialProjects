<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChurchUnits">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/unit_hoj"
            style="@style/commonUnits"
            android:layout_marginTop="4dp"
            android:text="@string/text_hoj"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_hoj"
            app:layout_constraintEnd_toEndOf="@id/unit_hoj"
            app:layout_constraintStart_toStartOf="@id/unit_hoj"
            android:id="@+id/unit_media"
            style="@style/commonUnits"
            android:text="@string/text_media"
            />
        <Button
            app:layout_constraintTop_toBottomOf="@id/unit_media"
            app:layout_constraintEnd_toEndOf="@id/unit_media"
            app:layout_constraintStart_toStartOf="@id/unit_media"
