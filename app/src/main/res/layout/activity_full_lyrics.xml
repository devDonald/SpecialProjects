<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FullLyrics">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/full_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:id="@+id/full_lyrics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lyrics Title"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/full_lyrics_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:padding="3dp"
                android:id="@+id/full_lyrics_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                />


        </LinearLayout>

        <TextView

            android:id="@+id/full_lyrics_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/full_layout"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="@id/full_layout"
            app:layout_constraintTop_toBottomOf="@id/full_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>