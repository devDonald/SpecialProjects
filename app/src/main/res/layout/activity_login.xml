<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.Login">

    <ScrollView
        android:layout_marginTop="30dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="40dp"
                android:id="@+id/login_image"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gla" />

            <EditText
                android:layout_below="@id/login_image"
                android:textColorHint="@color/blue"
                android:textColor="@color/blue"
                android:drawableEnd="@drawable/ic_message_black"
                android:layout_marginTop="30dp"
                android:id="@+id/et_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email Address"
                android:padding="10dp"
                android:imeOptions="actionNext"
                android:textSize="15sp"
                />

            <EditText
                android:textColorHint="@color/blue"
                android:textColor="@color/blue"
                android:drawableRight="@android:drawable/ic_lock_lock"
                android:layout_marginTop="20dp"
                android:layout_below="@id/et_login_email"
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp"
                android:imeOptions="actionDone"
                />

            <Button
                android:layout_below="@id/et_login_password"
                android:id="@+id/bt_user_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_yellow"
                android:fontFamily="sans-serif-medium"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/white" />



            <TextView
                android:id="@+id/tv_register_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_user_login"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Don't Have an Account yet? Register!"
                android:textColor="@color/black"
                android:textStyle="bold|italic" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
