<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_icons_messages"
            android:id="@+id/lyrics_icon"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyrics_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/lyrics_icon"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_below="@id/lyrics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyrics_author_tag"
            android:text="Written by:"
            android:textSize="13sp"
            android:layout_toEndOf="@id/lyrics_icon"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_below="@id/lyrics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyrics_author"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_toEndOf="@id/lyrics_author_tag"
            android:layout_marginStart="3dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>