<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="330dp"
                android:id="@+id/card_locate_church"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_lovenotes"
                >
                <RelativeLayout
                    android:id="@+id/rv_locate_church"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/location_image"
                        android:src="@drawable/ic_location_large"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_locate_church"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/cwhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_locate_church"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_alignParentBottom="true"
                        android:text="Locate Church"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="330dp"
                android:id="@+id/card_lovenotes"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_locate_church"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:id="@+id/rv_love"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:id="@+id/love_image"
                        android:src="@drawable/ic_video_library_large"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_videos_text"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/cwhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_videos_text"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_alignParentBottom="true"
                        android:text="Videos"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="330dp"
                android:id="@+id/card_praise_report"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_locate_church"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_upcoming_meetings"
                >
                <RelativeLayout
                    android:id="@+id/rv_testimony"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:id="@+id/testiminy_image"
                        android:src="@drawable/ic_icons_messages_large"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_audio_messages"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/cwhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_audio_messages"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_alignParentBottom="true"
                        android:text="AUDIO MESSAGES"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="330dp"
                android:id="@+id/card_upcoming_meetings"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/card_lovenotes"
                app:layout_constraintStart_toEndOf="@id/card_praise_report"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:id="@+id/rv_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:id="@+id/event_image"
                        android:src="@drawable/live"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_live_streaming"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/cwhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_live_streaming"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_alignParentBottom="true"
                        android:text="Live Streaming"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="330dp"
                android:id="@+id/card_articles"
                app:cardCornerRadius="3dp"
                app:layout_constraintTop_toBottomOf="@id/card_praise_report"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_notices"
                >
                <RelativeLayout
                    android:id="@+id/rv_articles"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:id="@+id/notices_image"
                        android:src="@drawable/ic_chat_black_large"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/tv_chat"
                        />
                    <Button
                        android:background="@drawable/border_white"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/cwhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_chat"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_alignParentBottom="true"
                        android:text="Chat"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="330dp"
                app:cardCornerRadius="3dp"
                android:id="@+id/card_notices"
                app:layout_constraintTop_toBottomOf="@id/card_upcoming_meetings"
                app:layout_constraintStart_toEndOf="@id/card_articles"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <RelativeLayout
                    android:id="@+id/rv_service_summary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:id="@+id/notice_image"
                        android:src="@drawable/service"
                        android:layout_alignParentTop="true"
                        android:layout_above="@id/bt_service_summary"
                        />

                    <Button
                        android:background="@drawable/border_white"
                        android:textColor="@color/cwhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_service_summary"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-black"
                        android:layout_alignParentBottom="true"
                        android:text="Service Summary"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>